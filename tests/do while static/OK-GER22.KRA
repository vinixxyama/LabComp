class Program {
  
	public void run() {
		writeln("");
		writeln("Ok-ger22");
		writeln("The output should be 100");
		int i, j, n;
		i = 0;
		j = 0;
		n = 10;
		boolean b;
		b = false;
		do { n = n + 1; } while ( false );
		assert n == 11, "'do-while' statement with 'false' as expression'";
		n = 10;
		int sum;
		sum = 0;
		do { 
		    i = 0;
		    do { 
			    i = i + 1;
				sum = sum + 1;
			} 
			while (i < n);
			j = j + 1;
		}
		while ( j < n );
		writeln(sum);
		/* assert sum == 100, "Nested 'do-while' statement with two indexes" */
  }

}
